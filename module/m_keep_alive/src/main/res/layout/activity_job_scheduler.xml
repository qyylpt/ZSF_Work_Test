<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".branch.JobSchedulerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/m_keep_alive_JobScheduler_linearLayout"
        android:padding="@dimen/dimen_20_dp"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m_keep_alive_textView_startJob"
            android:textSize="@dimen/dimen_20_sp"
            android:layout_marginTop="@dimen/dimen_10_dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m_keep_alive_textView_stopJob"
            android:textSize="@dimen/dimen_20_sp"
            android:layout_marginTop="@dimen/dimen_10_dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m_keep_alive_textView_update_job_info"
            android:textSize="@dimen/dimen_20_sp"
            android:textColor="@color/C_444444"
            android:layout_marginTop="@dimen/dimen_10_dp"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_20_dp"
        android:layout_marginLeft="@dimen/dimen_20_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAllCaps="false"
        android:id="@+id/button_m_keep_alive_do_JobScheduler"
        android:text="@string/m_keep_alive_button_do_JobScheduler_label"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10_dp"
        app:layout_constraintTop_toBottomOf="@id/m_keep_alive_JobScheduler_linearLayout"
        android:hint="@string/m_keep_alive_editText_delay_time"
        android:id="@+id/m_keep_alive_editText_delay_time" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/m_keep_alive_editText_delay_time"
        android:layout_margin="@dimen/dimen_10_dp"
        android:hint="@string/m_keep_alive_editText_Deadline_time"
        android:id="@+id/m_keep_alive_editText_Deadline_time" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10_dp"
        app:layout_constraintTop_toBottomOf="@id/m_keep_alive_editText_Deadline_time"
        android:hint="@string/m_keep_alive_editText_Duration_time"
        android:id="@+id/m_keep_alive_editText_Duration_time" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10_dp"
        android:id="@+id/m_keep_alive_RadioGroup"
        app:layout_constraintTop_toBottomOf="@id/m_keep_alive_editText_Duration_time">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m_keep_alive_radioButton_wifi"
            android:id="@+id/m_keep_alive_radioButton_wifi"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m_keep_alive_radioButton_net_any"
            android:id="@+id/m_keep_alive_editText_net_any"/>
    </RadioGroup>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/m_keep_alive_RadioGroup"
        android:text="@string/m_keep_alive_checkBox_charging"
        android:layout_margin="@dimen/dimen_10_dp"
        android:id="@+id/m_keep_alive_checkBox_charging"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/m_keep_alive_checkBox_charging"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:text="@string/m_keep_alive_checkBox_requiresIdle"
        android:id="@+id/m_keep_alive_checkBox_requiresIdle"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/m_keep_alive_button_startJob"
        android:layout_marginTop="@dimen/dimen_20_dp"
        app:layout_constraintTop_toBottomOf="@id/m_keep_alive_checkBox_requiresIdle"
        android:text="@string/m_keep_alive_button_start_job"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:textAllCaps="false"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:id="@+id/m_keep_alive_button_stopJob"
        android:layout_marginTop="@dimen/dimen_20_dp"
        app:layout_constraintTop_toBottomOf="@id/m_keep_alive_checkBox_requiresIdle"
        android:text="@string/m_keep_alive_button_stop_job"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_marginRight="@dimen/dimen_20_dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/m_keep_alive_button_startJob" />

</androidx.constraintlayout.widget.ConstraintLayout>