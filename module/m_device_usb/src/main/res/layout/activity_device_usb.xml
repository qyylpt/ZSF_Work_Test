<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceUsbActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/m_device_usb_button"
        android:id="@+id/m_device_usb_text_view"
        android:padding="@dimen/dimen_50_dp"
        android:background="@color/C_DCDCDC"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:layout_marginBottom="@dimen/dimen_10_dp"/>

    <Button
        android:id="@+id/m_device_usb_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/m_device_usb_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/m_device_usb_button_clear"
        tools:layout_editor_absoluteX="0dp"
        android:background="@color/C_444444"
        android:textColor="@color/C_FFFFFF"
        android:text="@string/m_device_usb_button_text"
        android:layout_marginBottom="@dimen/dimen_0_dp"/>
    <Button
        android:id="@+id/m_device_usb_button_clear"
        android:layout_width="@dimen/dimen_60_dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/m_device_usb_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:background="@color/C_444444"
        android:textColor="@color/C_FFFFFF"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:text="@string/m_device_usb_button_text_clear"
        android:layout_marginBottom="@dimen/dimen_0_dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>