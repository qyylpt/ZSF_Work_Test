<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval"
            android:useLevel="true">
            <size
                android:width="60dp"
                android:height="60dp" />

            <solid android:color="@color/transparent" />
            <stroke
                android:width="30dp"
                android:color="@color/m_camera_theme_background" />
        </shape>
    </item>

    <item
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp">
        <shape
            android:shape="oval"
            android:useLevel="true">
            <size
                android:width="60dp"
                android:height="60dp" />
            <solid android:color="@color/m_camera_common_background_color" />
        </shape>
    </item>

    <item
        android:bottom="27dp"
        android:left="40dp"
        android:right="40dp"
        android:top="27dp">
        <shape
            android:shape="rectangle"
            android:useLevel="true">
            <size
                android:width="4dp"
                android:height="30dp" />

            <corners android:radius="2dp" />
            <solid android:color="@color/m_camera_theme_background" />
        </shape>
    </item>

    <item
        android:bottom="40dp"
        android:left="27dp"
        android:right="27dp"
        android:top="40dp">
        <shape
            android:shape="rectangle"
            android:useLevel="true">
            <size
                android:width="30dp"
                android:height="4dp" />

            <corners android:radius="2dp" />
            <solid android:color="@color/m_camera_theme_background" />
        </shape>
    </item>

</layer-list>