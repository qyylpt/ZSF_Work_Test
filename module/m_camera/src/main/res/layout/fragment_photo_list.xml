<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/m_camera_theme_background">

    <TextView
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m_camera_status_bar_size"
        android:background="@color/m_camera_theme_background"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40_dp"
        app:layout_constraintTop_toBottomOf="@id/status_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/m_camera_common_title_file"
        android:textColor="@color/m_camera_text_color_000000"
        android:textSize="@dimen/m_camera_text_size_18"
        android:id="@+id/m_camera_TextView_photo_list_title"
        android:layout_marginBottom="@dimen/dimen_15_dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_15_dp"
        android:drawableLeft="@drawable/back"
        android:drawablePadding="@dimen/dimen_20_dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"
        app:layout_constraintTop_toBottomOf="@id/m_camera_TextView_photo_list_title"
        android:id="@+id/m_camera_View_photo_list_line"/>

    <ImageView
        android:layout_width="@dimen/dimen_20_dp"
        android:layout_height="@dimen/dimen_20_dp"
        app:layout_constraintTop_toTopOf="@+id/m_camera_TextView_photo_list_title"
        app:layout_constraintBottom_toBottomOf="@id/m_camera_TextView_photo_list_title"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/filter"
        android:layout_marginRight="@dimen/dimen_15_dp"
        android:id="@+id/m_camera_imageView_photo_list_filter"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        app:layout_constraintTop_toBottomOf="@+id/m_camera_View_photo_list_line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/m_camera_theme_flip_color"
        android:id="@+id/m_camera_View_flip_background"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        android:layout_margin="@dimen/m_camera_background_flip_margin"
        app:layout_constraintTop_toTopOf="@+id/m_camera_View_flip_background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/m_camera_theme_background"
        android:padding="@dimen/dimen_10_dp"
        android:id="@+id/m_camera_RecyclerView_photo_list"/>


</androidx.constraintlayout.widget.ConstraintLayout>