<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C_BLACK">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dimen_15_dp"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:id="@+id/m_camera_TextView_close"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/ic_camera_flash"
        android:layout_marginTop="@dimen/dimen_15_dp"
        android:layout_marginRight="@dimen/dimen_15_dp"
        android:id="@+id/m_camera_TextView_flash" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/m_camera_TextView_flash"
        android:layout_marginRight="@dimen/dimen_25_dp"
        android:layout_marginTop="@dimen/dimen_15_dp"
        android:id="@+id/m_camera_TextView_switch"
        android:background="@drawable/ic_camera_change" />

    <com.google.android.cameraview.CameraView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        app:layout_constraintTop_toBottomOf="@id/m_camera_TextView_flash"
        app:layout_constraintBottom_toTopOf="@id/m_camera_TextView_take_video"
        app:adjustViewBounds="true"
        android:background="@color/C_FFFFFF"
        android:layout_marginTop="@dimen/dimen_15_dp"
        android:id="@+id/m_camera_CameraView_camera" />

    <SeekBar
        android:id="@+id/focus_zoom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#23898989"
        android:progress="0"
        android:max="100"
        app:layout_constraintBottom_toBottomOf="@id/m_camera_CameraView_camera"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/dimen_15_dp"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:layout_marginRight="@dimen/dimen_15_dp"/>

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/focus_zoom"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:layout_marginBottom="@dimen/dimen_15_dp"
        android:format="00:00:00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m_camera_TextView_take_video"
        android:background="@drawable/ic_video_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/m_camera_TextView_take_photo"
        app:layout_constraintTop_toBottomOf="@id/m_camera_CameraView_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dimen_30_dp"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/m_camera_TextView_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_camera_button"
        app:layout_constraintLeft_toRightOf="@id/m_camera_TextView_take_video"
        app:layout_constraintRight_toLeftOf="@id/m_camera_TextView_video_control"
        app:layout_constraintTop_toBottomOf="@id/m_camera_CameraView_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_margin="@dimen/dimen_30_dp" />

    <TextView
        android:id="@+id/m_camera_TextView_video_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_video_default"
        app:layout_constraintLeft_toRightOf="@id/m_camera_TextView_take_photo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/m_camera_CameraView_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_margin="@dimen/dimen_30_dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>