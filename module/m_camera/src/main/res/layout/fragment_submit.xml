<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/m_camera_status_bar_size"
        android:id="@+id/status_bar"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/m_camera_theme_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/m_camera_theme_background"
        app:layout_constraintTop_toBottomOf="@+id/status_bar"
        android:id="@+id/m_camera_title_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/m_camera_title_background"
        app:layout_constraintBottom_toBottomOf="@id/m_camera_title_background"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:background="@drawable/ic_chevron_left_white_48dp"
        android:id="@+id/m_camera_TextView_title_back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/m_camera_title_background"
        app:layout_constraintBottom_toBottomOf="@id/m_camera_title_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/m_camera_TextView_title"
        android:textSize="@dimen/dimen_20_sp"
        android:textStyle="bold"
        android:textColor="@color/m_camera_text_color_333333"
        android:text="@string/m_camera_image_content_type_photo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/m_camera_title_background"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/m_camera_theme_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dp"
                android:id="@+id/m_camera_TextView_item_content_type"
                android:text="@string/m_camera_image_title"
                android:textSize="@dimen/m_camera_text_size_14"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_20_dp"
                android:textStyle="bold"
                android:background="@color/m_camera_submit_item_background"
                android:textColor="@color/m_camera_submit_item_text"/>

            <ImageView
                android:layout_width="@dimen/m_camera_RecycleView_item_image_size"
                android:layout_height="@dimen/m_camera_RecycleView_item_image_size"
                app:layout_constraintTop_toBottomOf="@id/m_camera_TextView_item_content_type"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/m_camera_TextView_item_scenes_title"
                android:id="@+id/m_camera_ImageView_icon"
                android:layout_marginTop="@dimen/dimen_10_dp"
                android:layout_marginLeft="@dimen/dimen_20_dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dp"
                android:id="@+id/m_camera_TextView_item_scenes_title"
                android:text="@string/m_camera_scenes_select_title"
                android:textStyle="bold"
                android:textSize="@dimen/m_camera_text_size_14"
                android:layout_marginTop="@dimen/dimen_10_dp"
                app:layout_constraintTop_toBottomOf="@id/m_camera_ImageView_icon"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_20_dp"
                android:background="@color/m_camera_submit_item_background"
                android:textColor="@color/m_camera_submit_item_text"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/m_camera_TextView_item_scenes_title"
                android:text="@string/m_camera_scenes_select"
                android:textColor="@color/m_camera_text_color_333333"
                android:textSize="@dimen/m_camera_text_size_16"
                android:drawableRight="@drawable/ic_chevron_left_white_48dp"
                android:paddingLeft="@dimen/dimen_20_dp"
                android:paddingRight="@dimen/dimen_20_dp"
                android:gravity="center_vertical"
                android:id="@+id/m_camera_TextView_scenes_select"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dp"
                android:id="@+id/m_camera_TextView_item_label_title"
                android:text="@string/m_camera_scenes_label_title"
                android:textStyle="bold"
                android:textSize="@dimen/m_camera_text_size_14"
                android:layout_marginTop="@dimen/dimen_10_dp"
                app:layout_constraintTop_toBottomOf="@id/m_camera_TextView_scenes_select"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_20_dp"
                android:background="@color/m_camera_submit_item_background"
                android:textColor="@color/m_camera_submit_item_text"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/m_camera_TextView_item_label_title"
                android:text="@string/m_camera_label_select"
                android:textColor="@color/m_camera_text_color_333333"
                android:textSize="@dimen/m_camera_text_size_16"
                android:drawableRight="@drawable/ic_chevron_left_white_48dp"
                android:paddingLeft="@dimen/dimen_20_dp"
                android:paddingRight="@dimen/dimen_20_dp"
                android:gravity="center_vertical"
                android:id="@+id/m_camera_TextView_label_select"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dp"
                android:id="@+id/m_camera_TextView_item_latitude_longitude"
                android:text="@string/m_camera_latitude_longitude_title"
                android:textStyle="bold"
                android:textSize="@dimen/m_camera_text_size_14"
                app:layout_constraintTop_toBottomOf="@id/m_camera_TextView_label_select"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_20_dp"
                android:background="@color/m_camera_submit_item_background"
                android:textColor="@color/m_camera_submit_item_text"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30_dp"
                app:layout_constraintTop_toBottomOf="@+id/m_camera_TextView_item_latitude_longitude"
                android:layout_marginTop="@dimen/dimen_10_dp"
                android:text="@string/m_camera_longitude"
                android:textSize="@dimen/m_camera_text_size_16"
                android:textColor="@color/m_camera_text_color_333333"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_20_dp"
                android:id="@+id/m_camera_textView_longitude"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30_dp"
                android:id="@+id/m_camera_TextView_latitude"
                android:text="@string/m_camera_latitude"
                android:textSize="@dimen/m_camera_text_size_16"
                android:textColor="@color/m_camera_text_color_333333"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_20_dp"
                app:layout_constraintTop_toBottomOf="@id/m_camera_textView_longitude" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30_dp"
                android:id="@+id/m_camera_TextView_latitude_longitude_radius"
                android:text="@string/m_camera_longitude_radius"
                android:textColor="@color/m_camera_text_color_333333"
                android:textSize="@dimen/m_camera_text_size_16"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_20_dp"
                app:layout_constraintTop_toBottomOf="@id/m_camera_TextView_latitude" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dp"
                android:id="@+id/m_camera_TextView_item_remarks"
                android:text="@string/m_camera_remarks_title"
                android:layout_marginTop="@dimen/dimen_10_dp"
                app:layout_constraintTop_toBottomOf="@id/m_camera_TextView_latitude_longitude_radius"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_20_dp"
                android:textStyle="bold"
                android:textSize="@dimen/m_camera_text_size_14"
                android:background="@color/m_camera_submit_item_background"
                android:textColor="@color/m_camera_submit_item_text"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_120_dp"
                app:layout_constraintTop_toBottomOf="@+id/m_camera_TextView_item_remarks"
                android:layout_margin="@dimen/dimen_20_dp"
                android:background="@drawable/submit_text_background"
                android:hint="@string/m_camera_prompt_text"
                android:textColorHint="#B2B4B6"
                android:gravity="start"
                android:id="@+id/m_camera_EditText_content"
                android:textColor="@color/m_camera_text_color_333333"
                android:padding="@dimen/dimen_10_dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50_dp"
                app:layout_constraintTop_toBottomOf="@id/m_camera_EditText_content"
                android:layout_margin="@dimen/dimen_40_dp"
                android:background="@color/m_camera_common_background_color"
                android:text="@string/m_camera_button_save_text"
                android:textColor="@color/C_FFFFFF"
                android:textStyle="bold"
                android:id="@+id/m_camera_Button_submit"
                android:textSize="@dimen/m_camera_text_size_16"
                android:layout_marginBottom="@dimen/dimen_120_dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
