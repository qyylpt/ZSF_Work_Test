<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C_BLACK">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close"
        android:layout_margin="@dimen/dimen_15_dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/m_camera_TextView_edit_close"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/dimen_15_dp"
        android:background="@drawable/ic_save"
        android:id="@+id/m_camera_TextView_save" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15_dp"
        android:background="@drawable/ic_draw"
        app:layout_constraintRight_toLeftOf="@id/m_camera_TextView_save"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/m_camera_TextView_undo"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimen_15_dp"
        app:layout_constraintTop_toBottomOf="@+id/m_camera_TextView_save"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerInside"
        android:id="@+id/m_camera_ImageView_photo_preview"/>
    <com.zsf.m_camera.ui.view.CustomPaintView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        app:layout_constraintTop_toBottomOf="@+id/m_camera_TextView_save"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/m_camera_CustomPaintView_tag"
        android:layout_margin="@dimen/dimen_15_dp"
        android:visibility="gone"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/m_camera_ProgressBar_save"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>