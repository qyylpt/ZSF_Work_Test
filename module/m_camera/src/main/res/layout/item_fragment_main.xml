<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/m_camera_RecycleView_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/m_camera_theme_background">

    <ImageView
        android:layout_width="@dimen/m_camera_RecycleView_item_image_size"
        android:layout_height="@dimen/m_camera_RecycleView_item_image_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/zhanwei"
        android:id="@+id/m_camera_ImageView_item_icon"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="201808181818.png"
        app:layout_constraintTop_toTopOf="@id/m_camera_ImageView_item_icon"
        app:layout_constraintLeft_toRightOf="@id/m_camera_ImageView_item_icon"
        app:layout_constraintBottom_toTopOf="@id/m_camera_TextView_item_file_size"
        android:textColor="@color/m_camera_text_color_333333"
        android:textSize="@dimen/m_camera_text_size_16"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/m_camera_RecycleView_item_margin_left"
        android:id="@+id/m_camera_TextView_item_file_name"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/m_camera_TextView_item_file_name"
        app:layout_constraintTop_toBottomOf="@id/m_camera_TextView_item_file_name"
        app:layout_constraintBottom_toBottomOf="@id/m_camera_ImageView_item_icon"
        android:textColor="@color/m_camera_submit_item_text"
        android:text="22k"
        android:textSize="@dimen/m_camera_text_size_14"
        android:id="@+id/m_camera_TextView_item_file_size"
        android:gravity="center_vertical"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/m_camera_item_line"
        android:layout_marginBottom="1dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/m_camera_View_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>