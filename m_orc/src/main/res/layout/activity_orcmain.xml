<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zsf.m_orc.ORCMainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_300_dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/m_orc_image"
        android:scaleType="centerInside" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/m_orc_button"
        app:layout_constraintTop_toBottomOf="@+id/m_orc_image"
        android:text="@string/m_orc_next_button"/>

    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/m_orc_button"
        android:layout_height="@dimen/dimen_300_dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/m_orc_init_text"
            android:padding="@dimen/dimen_30_sp"
            android:id="@+id/m_orc_text"
            />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
